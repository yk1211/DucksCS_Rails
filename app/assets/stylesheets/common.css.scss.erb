.box1{
  margin-bottom: 0px;
  padding-top:150px;
  text-align: center;
  height: 470px;
  width: 100%;
  background-image: image-url("st1.jpg");
  background-repeat: no-repeat;
  background-position: center center;
  background-size: cover;
  background-attachment: fixed;

  .school {
    color: #ffffff;
    font-size: 20px;
  }
  h1{
    font-size: 42px;
    color: #ffffff;
    margin: 0;
    margin-bottom: 20px;
  }

  .signup {
    font-size: 22px;
    color: #f5f5f5;
    width: 260px;
    height: 45px;
    border-radius: 10px;
    background-color: #880c29;
    outline: none;

    border: solid 1px #880c29;
    background-image: -webkit-gradient(
      linear,
      left top, left bottom,
      from(#e61445),
      to(#880c29));
    background-image: -webkit-linear-gradient(
      top,
      #e61445 0%,
      #880c29 100%);
    background-image: linear-gradient(
        top,
        #e61445 0%,
        #880c29 100%);

    a {
      color: #f5f5f5;
      text-decoration: none;
    }

  }

  .login{
    a {
      color: #ffffff;
      text-decoration: none;
    }
  }
}

