

<div class="signup">
  <div class="form-group" >
    <label for="name">User Name</label>
    <!-- <%= form.label :name, "User Name", :class => "control-label" %> -->
     <% if flash[:notice_name] %>
     <span class="notice"><%= flash[:notice_name] %></span>
     <% end %>
    <%= form.text_field :name, :class => "form-control", style: "width: 350px", :placeholder => "User name"%>
  </div>
  <div class="form-group" >
    <label for="email">Email</label>
    <!-- <%= form.label :email, "Email", :class => "control-label" %> -->
    <% if flash[:notice_email] %>
    <span class="notice"><%= flash[:notice_email]%></span>
    <% end %>
    <%= form.text_field :email, :class => "form-control", style: "width: 350px", :placeholder => "****@stevens.edu" %>
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <!-- <%= form.label :password, "Password", :class => "control-label" %> -->
    <% if flash[:notice_password] %>
    <span class="notice"><%= flash[:notice_password]%></span>
    <% end %>
    <%= form.password_field :password, :class => "form-control", style: "width: 350px" %>
  </div>
  <div class="form-group">
    <%= form.label :password_confirmation, "Confirm password", :class => "control-label" %>
    <%= form.password_field :password_confirmation, :class => "form-control", style: "width: 350px" %>
  </div>
  <div class="form-group">
      <% if current_member %>
      <%= form.submit "Update", :class => "btn btn-default", style: "width: 350px" %>
      <% else %>
      <%= form.submit "Sign up", :class => "btn btn-default", style: "width: 350px" %>
      <% end %>
  </div>

</div><!--signup class-->
