<% @page_title = "Inquiry" %>

<%= form_for @inquiry, :url => inquiry_confirm_path do |form| %>
<div class = "container">

    <span><%= link_to "Top", :root, style: "color: #880c29;" %> > Contact Us </span>
    <h2>Contact Us</h2>

    <% if @inquiry.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <strong>Errors!</strong>
        <ul>
          <% @inquiry.errors.each do |attr, msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :title, "Title", class: "control-label" %>
      <%= form.text_field :title, class: "form-control", style: "width: 500px", placeholder: "Title"%>
    </div>
    <div class="form-group">
      <%= form.label :name, "Name", :class => "control-label" %>
      <%= form.text_field :name, class: "form-control", style: "width: 500px", placeholder: "Name"%>
    </div>
    <div class="form-group">
      <%= form.label :email, "Email", :class => "control-label" %>
      <%= form.email_field :email, class: "form-control", style: "width: 500px", placeholder: "****@stevens.edu" %>
    </div>
    <div class="form-group">
      <%= form.label :message, "Message", class: "control-label" %>
      <%= form.text_area :message, class: "form-control", style: "width: 500px", cols: 40, rows: 5 %>
    </div>
    <p>
      <%= form.submit "Submit", class: "btn btn-primary" %>
    </p>

  <% end %>

</div>
